@model IEnumerable<FCC_ASPNC_WebApp.Models.ApplicationType>

@{
    ViewData["Title"] = "Index";
}

<h1>Applications</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Types</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
            Create New App Type
            </a>

        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        App Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.ApplicationName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Exisits</p>
    }

</div>
