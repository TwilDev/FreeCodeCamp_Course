@model FCC_ASPNC_WebApp.Models.ApplicationType
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p1-3">Add New App Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationName" class="form-control" />
                        <span asp-validation-for="ApplicationName" class="text-danger"></span>
                    </div>

                </div>

                <br /><br />

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>


    </div>
</form>

